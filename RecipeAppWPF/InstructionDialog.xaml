<Window x:Class="RecipeAppWPF.InstructionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAppWPF"
        mc:Ignorable="d"
        Title="Add Instruction" Height="270" Width="415" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded" ShowInTaskbar="False" Icon="/logo.png" ResizeMode="NoResize">
    <Grid Background="#FF3C3C3C">
        <Label Content="Help Text:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White"/>
        <TextBox x:Name="txtHelpText" Margin="16,39,15,0" TextWrapping="Wrap" VerticalAlignment="Top" AcceptsReturn="True" Height="139" Background="#FF646464" Foreground="White" FontSize="14" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="btnAccept" Content="Accept" Margin="0,189,111,0" VerticalAlignment="Top" Height="25" Click="btnCreate_Click" HorizontalAlignment="Right" Width="89" Background="#FFAA0000" Foreground="White"/>
        <Button x:Name="btnCancel" Content="Cancel" Margin="0,189,17,0" VerticalAlignment="Top" Height="25" Click="btnCancel_Click" HorizontalAlignment="Right" Width="89" Background="#FFAA0000" Foreground="White"/>
    </Grid>
</Window>
